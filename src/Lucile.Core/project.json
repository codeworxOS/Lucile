{
  "version": "1.0.0-*",
  "title": "Lucile Framework Core Library",
  "copyright": "copyright Â© codeworx gmbh 2016",
  "description": "Core components for the Lucile Framework. For detailed Documentation visit http://www.github.com/codeworxOS/Lucile",
  "authors": [ "Raphael Schwarz" ],
  "packOptions": {
    "owners": [ "codeworx gmbh" ],
    "summary": "Core components for the Lucile Framework. For detailed Documentation visit http://www.github.com/codeworxOS/Lucile"
  },
  "dependencies": {
    "Lucile.Primitives": "1.0.0-*",
    "Lucile.Shared": {
      "version": "1.0.0-*",
      "type": "build"
    },
    "Microsoft.Extensions.DependencyInjection.Abstractions": "1.1.0",
    "Microsoft.NETCore.Platforms": "1.1.0",
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    },
    "System.Collections.Concurrent": "4.3.0",
    "System.Dynamic.Runtime": "4.0.11",
    "System.Linq.Queryable": "4.0.1",
    "System.Reflection": "4.3.0",
    "System.Reflection.Emit": "4.0.0",
    "System.Reflection.Emit.ILGeneration": "4.0.0",
    "System.Reflection.TypeExtensions": "4.3.0",
    "System.Runtime": "4.3.0",
    "System.Runtime.Serialization.Primitives": "4.1.1",
    "System.Threading.Tasks.Parallel": "4.0.1",
    "System.Threading.Thread": "4.0.0",
    "System.Threading.Timer": "4.3.0"
  },

  "frameworks": {
    "netstandard1.3": {
      "imports": "dnxcore50"
    }
  },
  "buildOptions": {
    "compile": {
      "exclude": [ "Temp" ]
    },
    "warningsAsErrors": true,
    "additionalArguments": [ "/ruleset:..\\..\\global\\Stylecop.ruleset", "/additionalfile:..\\..\\global\\stylecop.json" ]
  }
}